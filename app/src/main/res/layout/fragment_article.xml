<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hjq.bar.TitleBar
            app:leftSize="@dimen/text_18sp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/coin_titleBar"
            app:leftColor="@color/title_color"
            app:leftTitle="@string/my_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.drake.brv.PageRefreshLayout
            android:id="@+id/page_refresh"
            app:layout_constraintTop_toBottomOf="@id/coin_titleBar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_view"
                tools:itemCount="10"
                tools:listitem="@layout/item_home_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.drake.brv.PageRefreshLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_float"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/dp_40"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/white"
            app:borderWidth="@dimen/dp_0"
            android:src="@drawable/ic_up_arrow"
            android:scaleType="center"
            android:elevation="@dimen/dp_5"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>